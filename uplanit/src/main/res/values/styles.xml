<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="AutocompleteTextView" parent="Widget.AppCompat.Light.AutoCompleteTextView">
        <item name="android:layout_margin">@dimen/micro_margin</item>
        <item name="android:layout_height">@dimen/micro_margin</item>
    </style>

    <!--Dialog fragment-->
    <style name="CustomDialog" parent="@style/Theme.AppCompat.Light.Dialog">
        <item name="android:windowNoTitle">false</item>
    </style>

    <!--Facebook login button-->
    <style name="FacebookLoginButton">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_eighteen</item>
        <item name="android:background">@drawable/facebook_button</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <!--navigation drawer-->
    <style name="NavMenu">
        <item name="android:textColor">@color/black_alpha_50</item>
        <item name="android:textSize">@dimen/text_fourteen</item>
    </style>
</resources>
