<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/display_details"
        android:layout_width="match_parent"
        android:layout_marginBottom="@dimen/margin_five"
        android:layout_marginTop="@dimen/margin_five"
        android:background="@color/white"
        android:padding="@dimen/micro_margin"
        android:textAlignment="textStart"
        android:gravity="start"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/welcome_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/welcome_text"
            android:layout_marginBottom="@dimen/margin_twenty"
            android:textSize="@dimen/text_twoFive"
            android:layout_centerHorizontal="true"/>

        <!-- Email Address -->

        <TextView
            android:id="@+id/email_text"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="@dimen/margin_five"
            android:textColor="@color/black"
            android:layout_below="@id/welcome_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/email_address_text"
            android:textSize="@dimen/activity_titles"
            android:layout_alignParentLeft="true"/>

        <TextView
            android:id="@+id/display_email"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/welcome_text"
            android:textStyle="bold"
            android:textColor="@color/grey"
            android:textSize="@dimen/activity_titles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"/>

        <!-- Seperator -->
        <View
            android:id="@+id/sep0"
            android:layout_width="match_parent"
            android:layout_below="@id/email_text"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/margin_five"
            android:layout_marginBottom="@dimen/margin_five"
            android:paddingBottom="@dimen/margin_five"
            android:background="@color/light_grey"/>

       <RelativeLayout
           android:id="@+id/name_view"
           android:layout_below="@id/sep0"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">

           <!-- First Name -->
           <TextView
               android:id="@+id/fname_view"
               android:textColor="@color/black"
               android:layout_alignParentStart="true"
               android:layout_marginBottom="@dimen/margin_five"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="@string/firstname_text"
               android:textSize="@dimen/activity_titles"
               android:layout_alignParentLeft="true"/>

           <TextView
               android:id="@+id/display_fname"
               android:layout_alignParentEnd="true"
               android:textStyle="bold"
               android:textSize="@dimen/activity_titles"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_alignParentRight="true"/>

           <!-- Seperator -->
           <View
               android:id="@+id/sep1"
               android:layout_below="@+id/fname_view"
               android:layout_width="match_parent"
               android:layout_height="1dp"
               android:layout_marginTop="@dimen/margin_five"
               android:layout_marginBottom="@dimen/margin_five"
               android:paddingBottom="@dimen/margin_five"
               android:background="@color/light_grey"
               />

           <!-- Last Name -->
           <TextView
               android:id="@+id/lname_view"
               android:layout_below="@id/sep1"
               android:layout_alignParentStart="true"
               android:textColor="@color/black"
               android:layout_marginBottom="@dimen/margin_five"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="@string/lastname_text"
               android:textSize="@dimen/activity_titles"
               android:layout_alignParentLeft="true"/>

           <TextView
               android:id="@+id/display_lname"
               android:layout_alignParentEnd="true"
               android:textStyle="bold"
               android:layout_below="@id/sep1"
               android:textSize="@dimen/activity_titles"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_alignParentRight="true"/>

           <!-- Seperator -->
           <View
               android:id="@+id/sep2"
               android:layout_width="match_parent"
               android:layout_height="1dp"
               android:layout_below="@id/lname_view"
               android:layout_marginTop="@dimen/margin_five"
               android:layout_marginBottom="@dimen/margin_five"
               android:paddingBottom="@dimen/margin_five"
               android:background="@color/light_grey"/>

       </RelativeLayout>

       <RelativeLayout
           android:id="@+id/username_view"
           android:layout_below="@id/name_view"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">

           <!-- Username -->
           <TextView
               android:id="@+id/username_text"
               android:textColor="@color/black"
               android:layout_alignParentStart="true"
               android:layout_marginBottom="@dimen/margin_five"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="@string/prompt_username"
               android:textSize="@dimen/activity_titles"
               android:layout_alignParentLeft="true"/>

           <TextView
               android:id="@+id/display_username"
               android:layout_alignParentEnd="true"
               android:textStyle="bold"
               android:textSize="@dimen/activity_titles"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_alignParentRight="true"/>

           <!-- Seperator -->
           <View
               android:id="@+id/sep3"
               android:layout_width="match_parent"
               android:layout_height="1dp"
               android:layout_below="@id/display_username"
               android:layout_marginTop="@dimen/margin_five"
               android:layout_marginBottom="@dimen/margin_five"
               android:paddingBottom="@dimen/margin_five"
               android:background="@color/light_grey"/>

       </RelativeLayout>

        <RelativeLayout
            android:id="@+id/settings_view"
            android:layout_below="@id/username_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/account_settings"
                android:textColor="@color/grey"
                android:textAllCaps="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="@dimen/margin_five"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/acct_settings_text"
                android:textSize="@dimen/activity_titles"
                android:layout_alignParentLeft="true"/>

            <!-- Separator -->
            <View
                android:id="@+id/sep4"
                android:layout_below="@id/account_settings"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/margin_five"
                android:layout_marginBottom="@dimen/margin_five"
                android:paddingBottom="@dimen/margin_five"
                android:background="@color/light_grey"/>

            <LinearLayout
                android:id="@+id/change_pswd_view"
                android:layout_below="@id/sep4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/change_pswd_text"
                    android:textColor="@color/black"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="@dimen/margin_five"
                    android:layout_width="0dp"
                    android:layout_weight="0.9"
                    android:layout_height="wrap_content"
                    android:text="@string/change_pswd_text"
                    android:textSize="@dimen/activity_titles"
                    android:layout_alignParentLeft="true"/>

                <ImageView
                    android:id="@+id/edit_pswd_img"
                    android:src="@drawable/ic_create_edit"
                    android:layout_width="0dp"
                    android:layout_weight="0.1"
                    android:layout_height="@dimen/margin_two_five"/>
            </LinearLayout>

            <!-- Separator -->
            <View
                android:id="@+id/sep5"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/change_pswd_view"
                android:layout_marginTop="@dimen/margin_five"
                android:layout_marginBottom="@dimen/margin_five"
                android:paddingBottom="@dimen/margin_five"
                android:background="@color/light_grey"/>

        </RelativeLayout>

    </RelativeLayout>



</RelativeLayout>