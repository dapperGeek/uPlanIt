<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:fab="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <com.github.clans.fab.FloatingActionMenu
        android:id="@+id/menu_phone_number"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/margin_two"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:paddingRight="10dp"
        android:paddingBottom="@dimen/size_ninety"
        android:paddingLeft="10dp"
        fab:menu_colorNormal="@color/colorAccent"
        fab:menu_labels_ellipsize="end"
        fab:menu_labels_singleLine="true"
        fab:menu_icon="@drawable/ic_make_call"
        fab:menu_backgroundColor="#9dffffff">

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fab_call"
            android:layout_width="wrap_content"
            fab:fab_colorNormal="@color/colorAccent"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_make_call"
            fab:fab_size="mini"
            fab:fab_label="Call" />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fab_sms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_colorNormal="@color/colorAccent"
            android:src="@drawable/ic_send_sms"
            fab:fab_size="mini"
            fab:fab_label="Send SMS" />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fab_add"
            android:layout_width="wrap_content"
            fab:fab_colorNormal="@color/colorAccent"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_add_contact"
            fab:fab_size="mini"
            fab:fab_label="Add to contacts" />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fab_copy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_colorNormal="@color/colorAccent"
            android:src="@drawable/ic_copy_number"
            fab:fab_size="mini"
            fab:fab_label="Copy number" />

    </com.github.clans.fab.FloatingActionMenu>

</RelativeLayout>